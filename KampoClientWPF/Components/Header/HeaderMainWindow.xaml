<UserControl x:Class="KampoClientWPF.Components.Header.HeaderMainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KampoClientWPF.Components.Header"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#80373737" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid>
            
     
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="0.1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="UserNameTxb" Text="UserName" FontSize="20" FontWeight="DemiBold" Foreground="White" Margin="20,0,0,0"></TextBlock>
        <StackPanel Grid.Column="2" Height="20" Orientation="Horizontal" HorizontalAlignment="Right">
            <Image Margin="0,0,5,0" Source="/Resource/Images/svernutapp.png" PreviewMouseLeftButtonDown="SvernutApp" />

            <Image Source="/Resource/Images/closeapp.png" PreviewMouseLeftButtonDown="CloseApp" />
        </StackPanel>
        </Grid>
    </Border>
</UserControl>
