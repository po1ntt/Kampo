<UserControl x:Class="KampoClientWPF.Components.Header.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KampoClientWPF.Components.Header"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#111" Height="25" Margin="0" VerticalAlignment="Top">
        <StackPanel Height="20" Orientation="Horizontal" HorizontalAlignment="Right">
            <Image Margin="0,0,5,0" Source="/Resource/Images/svernutapp.png" PreviewMouseLeftButtonDown="SvernutApp" />

            <Image Source="/Resource/Images/closeapp.png" PreviewMouseLeftButtonDown="CloseApp" />
        </StackPanel>
    </Grid>
</UserControl>
